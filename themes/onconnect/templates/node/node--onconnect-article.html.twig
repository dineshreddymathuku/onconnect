<div class="news-section">
<div class="news-heading">
    <span class="news-label">{{ node.type.entity.label }} </span>
    {% if content.field_title %}
      <h1 class="news-article-title">{{ content.field_title }}</h1>
    {% endif %}
    <ul>
      {% if content.field_news_published_date %}
        <li><span><img src="../{{ directory }}/images/icons/date.svg"></span>{{ content.field_news_published_date }}
        </li>
      {% endif %}
      {% if content.field_read_time %}
        <li><span><img src="../{{ directory }}/images/icons/time.svg"/></span>{{ content.field_read_time }} min read
        </li>
      {% endif %}
    </ul>
</div>
<div id="news-article">
  <div class="news-article-inner-container">
  <div class="news-article-content">
    <div class="news-article-inside">
      {% if content.field_featured_image %}
        <div class="news-featured-img">
		    <img  src ="{{ file_url(node.field_featured_image.entity.field_media_image.entity.fileuri)}}" alt = "news-featured image"/> 
          <div class="image-caption">{{ content.field_banner_image_caption|raw }}</div>
        </div>
      {% endif %}
      {{ content.body }}
    </div>
    {% if authors %}
      <div class="under-line"></div>
      <p class="news-article-author">Authored by {{ authors }}</p>
    {% endif %}
  </div>
  </div>
</div>
</div>
